<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Action Bar / Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="DashBoard"
        app:titleTextColor="@color/black" />

    <!-- Content Area -->

    <!-- Bottom Navigation View -->



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="295dp"
            android:layout_height="206dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logopptsb" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/buttonLihat"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/red"
            android:drawableLeft="@drawable/baseline_preview_24"
            android:text="Lihat Data"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/buttonInput"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/biru"
            android:drawableLeft="@drawable/baseline_input_24"
            android:text="Olah Data"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonInformasi"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/kuning"
            android:drawableLeft="@drawable/baseline_info_24"
            android:text="Iinformasi"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:text="Keluar"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>
